{
    "name": "@cbnsndwch/remix-nest",
    "version": "0.1.0",
    "description": "Remix/Vite/NestJS custom server demo",
    "private": true,
    "author": {
        "name": "Sergio Leon",
        "url": "https://cbnsndwch.io"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/cbnsndwch/remix-nest"
    },
    "workspaces": {
        "packages": [
            "apps/*",
            "libs/*"
        ]
    },
    "scripts": {
        "clean": "turbo run clean",
        "clean:components": "turbo run clean --filter=@chathqio/portal-components...",
        "build": "turbo run build",
        "build:web": "turbo run build --filter=\"./apps/web\"",
        "build:api": "turbo run build --filter=\"./apps/api\"",
        "build:libs": "turbo run build --filter=\"./libs/*\"",
        "format": "turbo run format",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "test": "turbo run test",
        "manifest:version": "turbo run manifest:version",
        "deps": "node tools/dep-version-map.cjs && tools/dep-version-map.json",
        "vmajor": "yarn workspaces foreach -v --topological-dev version major",
        "vminor": "yarn workspaces foreach -v --topological-dev version minor",
        "vpatch": "yarn workspaces foreach -v --topological-dev version patch",
        "clog": "conventional-changelog -p angular -i CHANGELOG.md -o changelog-temp.md && changelog-temp.md"
    },
    "devDependencies": {
        "@jest/globals": "29.7.0",
        "@types/estree": "^1.0.5",
        "@types/jest": "29.5.12",
        "@types/react-window": "~1.8.8",
        "change-case": "^5.4.3",
        "conventional-changelog-cli": "^4.1.0",
        "http-server": "^14.1.1",
        "hygen": "^6.2.11",
        "jest": "29.7.0",
        "npm-check-updates": "^16.14.15",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "turbo": "^1.12.4",
        "typedoc": "^0.25.8",
        "typedoc-plugin-extras": "^3.0.0",
        "typedoc-plugin-mdn-links": "^3.1.16",
        "typescript": "~5.3.3"
    }
}
