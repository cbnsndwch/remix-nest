    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "debug"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/@nestjs/**"
            ],
            "env": {
                "NODE_OPTIONS": "--tls-min-v1.2",
                "NODE_EXTRA_CA_CERTS": "./config/le-cas.pem",
                "LOG_LEVEL": "VERBOSE",
                "SERVER_PORT": "4003",
                "REMIX_BUILD_ROOT": "${workspaceRoot}/apps/web",
                "SESSION_SECRET": "sup3er-dooper-s1cr3t"
            },
            "cwd": "${workspaceRoot}/apps/api",
            "console": "integratedTerminal"
        },
        {
            "name": "Nest",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "dev:nest"
            ],
            "skipFiles": [
                "<node_internals>/**",
            ],
            "env": {
                "NODE_OPTIONS": "--tls-min-v1.2",
                "NODE_EXTRA_CA_CERTS": "./config/le-cas.pem",
                "LOG_LEVEL": "VERBOSE",
                "SERVER_PORT": "4003",
                "REMIX_BUILD_ROOT": "${workspaceRoot}/apps/web",
                "SESSION_SECRET": "sup3er-dooper-s1cr3t"
            },
            "cwd": "${workspaceRoot}/apps/api",
            "console": "integratedTerminal"
        },
    ]
}